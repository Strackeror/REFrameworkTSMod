{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "types": [
            "lua-types/5.4"
        ],
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "ES2020"
    },
    "tstl": {
        "luaLibImport": "inline",
        "luaTarget": "5.3",
        "measurePerformance": true,
        "noImplicitGlobalVariables": true,
        "luaBundle": "test.lua",
        "luaBundleEntry": "test.ts"
    },
    "include": [
        "./*",
        "../IL2CPP/*"
    ]
}