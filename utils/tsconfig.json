{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "types": [
            "lua-types/5.4"
        ],
        "baseUrl": ".",
        "outDir": "./dist",
        "noImplicitAny": true,
        "target": "ES2020",
        "declaration": true
    },
    "tstl": {
        "luaLibImport": "inline",
        "luaTarget": "5.3",
        "measurePerformance": true,
        "noImplicitGlobalVariables": true
    },
    "include": [
        "./*",
        "../IL2CPP/*"
    ]
}